@model IEnumerable<rentCar.Models.PAGINA>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de páginas</h2>

<p>
    @Html.ActionLink("Crear nueva página", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE_PAGINA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL_PAGINA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ESTADO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE_PAGINA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL_PAGINA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ESTADO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_PAGINA }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.ID_PAGINA }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_PAGINA })
        </td>
    </tr>
}

</table>
