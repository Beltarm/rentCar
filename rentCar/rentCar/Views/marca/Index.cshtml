@model IEnumerable<rentCar.Models.MARCA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/dashboardLayout.cshtml";
}

<h2>Lista de marcas</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE_MARCA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ESTADO)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE_MARCA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ESTADO)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_MARCA }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.ID_MARCA }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_MARCA })
        </td>
    </tr>
}

</table>
