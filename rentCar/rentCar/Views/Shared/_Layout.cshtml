@Html.Partial("Head")
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    @Html.ActionLink("Car Picker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo" })
    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item nav-link li-nav">@Html.ActionLink("Inicio", "Index", "Home", new { @class = "li-nav" })</li>
            <li class="nav-item nav-link li-nav">@Html.ActionLink("Acerca de", "About", "Home", new { @class = "li-nav" })</li>
            <li class="nav-item nav-link li-nav">@Html.ActionLink("Contacto", "Contact", "Home", new { @class = "li-nav" })</li>
        </ul>

       
        <form class="form-inline my-1 my-lg-0 mr-2">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle mx-2" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Concepto de búsqueda
                </button>
                <select name="vehiculos" class="dropdown-menu" aria-labelledby="dropdownMenuButton" size="7">
                    <option class="dropdown-item" value="modelo">Modelo</option>
                    <option class="dropdown-item" value="marca">Marca</option>
                    <option class="dropdown-item" value="pagina">Página</option>
                    <option class="dropdown-item" value="tipoVehiculo">Tipo de Vehículo</option>
                    <option class="dropdown-item" value="tipoCombustible">Tipo de Combustible</option>
                    <option class="dropdown-item" value="precio">Precio</option>
                </select>
            </div>

            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit" value="buscar">Buscar</button>
        </form>
        @Html.Partial("_LoginPartial")
    </div>
</nav>
<br />
<br />
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Car Picker</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
<script src="~/Scripts/umd/Custom.js"></script>
@Html.Partial("Foot")